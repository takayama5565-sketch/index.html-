                                <option value="3">水曜日</option>
                                <option value="4">木曜日</option>
                                <option value="5">金曜日</option>
                                <option value="6">土曜日</option>
                            </select>
                            <label style="margin-top: 8px;">時刻</label>
                            <input type="time" id="repeat-weekly-time">
                        </div>
                        <div class="form-group" id="monthly-options" style="display: none;">
                            <label>日付</label>
                            <input type="number" id="repeat-day" min="1" max="31" placeholder="日">
                            <label style="margin-top: 8px;">時刻</label>
                            <input type="time" id="repeat-monthly-time">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>タスク詳細</label>
                        <textarea id="task-details"></textarea>

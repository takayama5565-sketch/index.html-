                    <div class="form-group">
                        <label>詳細画像</label>
                        <input type="file" id="task-image" accept="image/*" multiple>
                        <div id="image-upload-status" style="font-size: 12px; color: var(--color-text-secondary); margin-top: 4px;"></div>
                        <div id="task-images-preview" style="display: flex; flex-wrap: wrap; gap: 12px; margin-top: 12px;"></div>
                    </div>
                    <button type="submit" class="btn btn-primary" id="submit-task-btn">タスクを追加</button>
                </form>
            </div>

                <div class="settings-section">
                    <h3>カテゴリー設定</h3>
                    <div id="category-settings" class="list-manager"></div>
                    <div class="form-group" style="margin-top: 12px;">
                        <input type="text" id="new-category" placeholder="新しいカテゴリー">
                        <button class="btn btn-secondary btn-small" style="margin-top: 8px;" onclick="addCategory()">カテゴリーを追加</button>
                    </div>
                </div>

                <div class="settings-section">
                    <h3>自動バックアップ履歴</h3>
                    <p style="font-size: 13px; color: var(--color-text-secondary); margin-bottom: 12px;">
                        タスクに変更があった際に自動的にバックアップを作成します（最新5世代保持）
                    </p>
                    <div style="margin-bottom: 12px;">
                        <strong>最終バックアップ:</strong> 
                        <span id="last-backup-time" style="color: var(--color-text-secondary);">-</span>
                    </div>
                    <div id="backup-history" class="list-manager"></div>
                </div>
            </div>
        </div>
    </div>

    <div id="task-detail-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>タスク詳細</h2>
                <button class="close-btn" onclick="closeModal()">&times;</button>
            </div>
            <div id="task-detail-content"></div>
        </div>
    </div>

    <div id="image-modal" class="modal" onclick="closeImageModal()">
        <div style="position: relative; max-width: 90vw; max-height: 90vh; margin: auto;">
            <button class="close-btn" onclick="closeImageModal()" style="position: absolute; top: -40px; right: 0; background: white; color: black; border-radius: 50%;">&times;</button>
            <img id="modal-image" style="max-width: 100%; max-height: 90vh; object-fit: contain; border-radius: 8px;">
        </div>
    </div>

    <script>
        function openImageModal(imgSrc) {
            event.stopPropagation();
            document.getElementById('modal-image').src = imgSrc;
            document.getElementById('image-modal').classList.add('active');
        }

        function closeImageModal() {
            document.getElementById('image-modal').classList.remove('active');
        }
    </script>

    <script>
        let tasks = [];
        let priorities = [
            { name: '高', color: '#C0152F' },
            { name: '中', color: '#E68161' },
            { name: '低', color: '#21808D' }
        ];
        let statuses = ['検討中', '未着手', 'ヒアリング中', '資料作成中', 'チーム確認中', 'チーム修正中', '上長確認中', 'リリース準備', 'リリース', 'リリース後修正', '★オーダー確認', '荷物作成中', '発送3日前', '発送2日前', '発送1日前', '荷物発送', '依頼前', '依頼終了', '依頼者リマインド', '完了'];
        let categories = ['営業', '制作', '管理'];
        let currentAlerts = [];
        let categoryOrder = ['営業', '制作', '管理'];
        let selectedCategories = ['営業', '制作', '管理'];

        function init() {
            loadData();
            renderPrioritySettings();
            renderStatusSettings();
            renderCategorySettings();
            renderBackupHistory();
            updateLastBackupTime();
            updateSelects();
            renderTasks();
            updateStats();
            renderGanttChart();
            generateReports();
        }

        function updateLastBackupTime() {
            const lastBackup = localStorage.getItem('lastBackupTime');
            const element = document.getElementById('last-backup-time');
            if (element) {
                if (lastBackup) {
                    const date = new Date(lastBackup);
                    element.textContent = date.toLocaleString('ja-JP');
                } else {
                    element.textContent = 'バックアップなし';
                }
            }
        }

        function loadData() {
            const saved = JSON.parse(localStorage.getItem('taskManagerData') || '{}');
            if (saved.tasks) tasks = saved.tasks;
            if (saved.priorities) priorities = saved.priorities;
            if (saved.statuses) statuses = saved.statuses;
            if (saved.categories) categories = saved.categories;
            if (saved.categoryOrder) categoryOrder = saved.categoryOrder;
            else categoryOrder = [...categories];
            selectedCategories = [...categoryOrder];
        }

        function saveData() {
            const currentData = JSON.stringify({ tasks, priorities, statuses, categories, categoryOrder });
            const savedData = localStorage.getItem('taskManagerData');
            
            if (currentData !== savedData) {
                localStorage.setItem('taskManagerData', currentData);
                
                const timestamp = new Date().toISOString();
                const backupKey = `taskManagerBackup_${timestamp}`;
                localStorage.setItem(backupKey, currentData);
                localStorage.setItem('lastBackupTime', timestamp);
                
                manageBackupHistory();
                updateLastBackupTime();
            }
        }

        function manageBackupHistory() {
            const allKeys = Object.keys(localStorage);
            const backupKeys = allKeys.filter(key => key.startsWith('taskManagerBackup_')).sort().reverse();
            
            const maxBackups = 5;
            if (backupKeys.length > maxBackups) {
                backupKeys.slice(maxBackups).forEach(key => localStorage.removeItem(key));
            }
        }

        function getBackupHistory() {
            const allKeys = Object.keys(localStorage);
            const backupKeys = allKeys.filter(key => key.startsWith('taskManagerBackup_')).sort().reverse();
            
            return backupKeys.map(key => {
                const timestamp = key.replace('taskManagerBackup_', '');
                const data = JSON.parse(localStorage.getItem(key));
                return {
                    key,
                    timestamp,
                    date: new Date(timestamp),
                    taskCount: data.tasks ? data.tasks.length : 0
                };
            });
        }

        function restoreBackup(backupKey) {
            if (!confirm('このバックアップを復元しますか？現在のデータは上書きされます。')) return;
            
            const backupData = localStorage.getItem(backupKey);
            if (backupData) {
                localStorage.setItem('taskManagerData', backupData);
                const data = JSON.parse(backupData);
                if (data.tasks) tasks = data.tasks;
                if (data.priorities) priorities = data.priorities;
                if (data.statuses) statuses = data.statuses;
                if (data.categories) categories = data.categories;
                
                init();
                showNotification('バックアップ復元', 'データを復元しました', 'info');
            }
        }

        function deleteBackup(backupKey) {
            if (!confirm('このバックアップを削除しますか？')) return;
            localStorage.removeItem(backupKey);
            renderBackupHistory();
            showNotification('バックアップ削除', 'バックアップを削除しました', 'info');
        }

        function renderBackupHistory() {
            const container = document.getElementById('backup-history');
            const backups = getBackupHistory();
            
            if (backups.length === 0) {
                container.innerHTML = '<p style="color: var(--color-text-secondary);">バックアップ履歴がありません</p>';
                return;
            }

            container.innerHTML = backups.map(backup => `
                <div class="list-item">
                    <div>
                        <div style="font-weight: 600;">${backup.date.toLocaleString('ja-JP')}</div>
                        <div style="font-size: 12px; color: var(--color-text-secondary);">タスク数: ${backup.taskCount}件</div>
                    </div>
                    <div style="display: flex; gap: 8px;">
                        <button class="btn btn-secondary btn-small" onclick="restoreBackup('${backup.key}')">復元</button>
                        <button class="btn btn-secondary btn-small" onclick="deleteBackup('${backup.key}')">削除</button>
                    </div>
                </div>
            `).join('');
        }

        function switchTab(tabName) {
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            event.target.classList.add('active');
            document.getElementById(tabName + '-tab').classList.add('active');
            
            if (tabName === 'timeline') renderGanttChart();
            if (tabName === 'reports') generateReports();
            if (tabName === 'completed') renderCompletedTasks();
            if (tabName === 'settings') {
                renderBackupHistory();
                updateLastBackupTime();
            }
        }

        function updateSelects() {
            const prioritySelect = document.getElementById('task-priority');
            const statusSelect = document.getElementById('task-status');
            const categorySelect = document.getElementById('task-category');
            const filterPriority = document.getElementById('filter-priority');
            const filterStatus = document.getElementById('filter-status');
            const filterCategory = document.getElementById('filter-category');

            prioritySelect.innerHTML = priorities.map(p => `<option value="${p.name}">${p.name}</option>`).join('');
            statusSelect.innerHTML = statuses.map(s => `<option value="${s}">${s}</option>`).join('');
            categorySelect.innerHTML = categories.map(c => `<option value="${c}">${c}</option>`).join('');

            filterPriority.innerHTML = '<option value="">すべて</option>' + priorities.map(p => `<option value="${p.name}">${p.name}</option>`).join('');
            filterStatus.innerHTML = '<option value="">すべて</option>' + statuses.map(s => `<option value="${s}">${s}</option>`).join('');
            filterCategory.innerHTML = '<option value="">すべて</option>' + categories.map(c => `<option value="${c}">${c}</option>`).join('');
        }

        function toggleRepeatOptions() {
            const repeatType = document.getElementById('repeat-type').value;
            document.getElementById('weekly-options').style.display = repeatType === 'weekly' ? 'block' : 'none';
            document.getElementById('monthly-options').style.display = repeatType === 'monthly' ? 'block' : 'none';
        }

        function addAlert() {
            const days = document.getElementById('alert-days').value;
            const time = document.getElementById('alert-time').value;
            if (days !== '' || time !== '') {
                currentAlerts.push({ days: parseInt(days) || 0, time: time || '09:00' });
                renderAlertList();
                document.getElementById('alert-days').value = '';
                document.getElementById('alert-time').value = '';
            }
        }

        function removeAlert(index) {
            currentAlerts.splice(index, 1);
            renderAlertList();
        }

        function renderAlertList() {
            const container = document.getElementById('alert-list');
            container.innerHTML = currentAlerts.map((alert, i) => `
                <div class="alert-tag">
                    ${alert.days}日前 ${alert.time} 
                    <button type="button" onclick="removeAlert(${i})" style="border: none; background: none; cursor: pointer; margin-left: 4px;">×</button>
                </div>
            `).join('');
        }

        document.getElementById('task-form').addEventListener('submit', (e) => {
            e.preventDefault();
            
            if (imageProcessingCount > 0) {
                alert('画像の処理中です。しばらくお待ちください。');
                return;
            }
            
            const imageInput = document.getElementById('task-image');
            const reader = new FileReader();
            
            const repeatType = document.getElementById('repeat-type').value;
            const repeatConfig = repeatType === 'none' ? null : {
                type: repeatType,
                weekday: repeatType === 'weekly' ? parseInt(document.getElementById('repeat-weekday').value) : null,
                day: repeatType === 'monthly' ? parseInt(document.getElementById('repeat-day').value) : null,
                time: repeatType === 'weekly' ? document.getElementById('repeat-weekly-time').value : 
                      repeatType === 'monthly' ? document.getElementById('repeat-monthly-time').value : null
            };

            if (editingTaskId) {
                const taskIndex = tasks.findIndex(t => t.id === editingTaskId);
                if (taskIndex !== -1) {
                    const existingTask = tasks[taskIndex];
                    tasks[taskIndex] = {
                        ...existingTask,
                        name: document.getElementById('task-name').value,
                        description: document.getElementById('task-description').value,
                        assignee: document.getElementById('task-assignee').value,
                        startDate: document.getElementById('task-start').value,
                        endDate: document.getElementById('task-end').value,
                        priority: document.getElementById('task-priority').value,
                        status: document.getElementById('task-status').value,
                        category: document.getElementById('task-category').value,
                        details: document.getElementById('task-details').value,
                        alerts: [...currentAlerts],
                        images: currentImages.length > 0 ? [...currentImages] : existingTask.images,
                        repeat: repeatConfig
                    };
                    alert('タスクを更新しました');
                }
                editingTaskId = null;
            } else {
                const task = {
                    id: Date.now(),
                    name: document.getElementById('task-name').value,
                    description: document.getElementById('task-description').value,
                    assignee: document.getElementById('task-assignee').value,
                    startDate: document.getElementById('task-start').value,
                    endDate: document.getElementById('task-end').value,
                    priority: document.getElementById('task-priority').value,
                    status: document.getElementById('task-status').value,
                    category: document.getElementById('task-category').value,
                    details: document.getElementById('task-details').value,
                    alerts: [...currentAlerts],
                    images: [...currentImages],
                    comments: [],
                    repeat: repeatConfig,
                    createdAt: new Date().toISOString()
                };
                tasks.push(task);
                alert('タスクが追加されました');
            }

            saveData();
            renderTasks();
            updateStats();
            e.target.reset();
            currentAlerts = [];
            currentImages = [];
            imageProcessingCount = 0;
            renderAlertList();
            renderImagePreviews();
            toggleRepeatOptions();
            
            const statusElement = document.getElementById('image-upload-status');
            statusElement.textContent = '';
            updateSubmitButton();
            
            const submitBtn = document.querySelector('#task-form button[type="submit"]');
            submitBtn.textContent = 'タスクを追加';
        });

        let currentImages = [];
        let imageProcessingCount = 0;

        document.getElementById('task-image').addEventListener('change', (e) => {
            const files = Array.from(e.target.files);
            const statusElement = document.getElementById('image-upload-status');
            const totalFiles = files.length;
            let processedFiles = 0;
            
            if (totalFiles === 0) return;
            
            imageProcessingCount = totalFiles;
            updateSubmitButton();
            statusElement.textContent = `画像を処理中... (0/${totalFiles})`;
            statusElement.style.color = 'var(--color-orange-500)';
            
            files.forEach((file, index) => {
                // 画像サイズを圧縮して高速化
                const reader = new FileReader();
                reader.onload = (e) => {
                    const img = new Image();
                    img.onload = () => {
                        const canvas = document.createElement('canvas');
                        const ctx = canvas.getContext('2d');
                        
                        // 最大幅を1200pxに制限して圧縮
                        const maxWidth = 1200;
                        const scale = img.width > maxWidth ? maxWidth / img.width : 1;
                        canvas.width = img.width * scale;
                        canvas.height = img.height * scale;
                        
                        ctx.drawImage(img, 0, 0, canvas.width, canvas.height);
                        
                        // 圧縮品質を0.8に設定
                        const compressedData = canvas.toDataURL('image/jpeg', 0.8);
                        currentImages.push(compressedData);
                        
                        processedFiles++;
                        imageProcessingCount--;
                        
                        statusElement.textContent = `画像を処理中... (${processedFiles}/${totalFiles})`;
                        
                        if (processedFiles === totalFiles) {
                            statusElement.textContent = `✓ ${totalFiles}枚の画像を追加しました`;
                            statusElement.style.color = 'var(--color-primary)';
                            setTimeout(() => {
                                statusElement.textContent = '';
                            }, 3000);
                            updateSubmitButton();
                        }
                        
                        renderImagePreviews();
                    };
                    img.src = e.target.result;
                };
                reader.readAsDataURL(file);
            });
        });

        function updateSubmitButton() {
            const submitBtn = document.getElementById('submit-task-btn');
            if (imageProcessingCount > 0) {
                submitBtn.disabled = true;
                submitBtn.style.opacity = '0.6';
                submitBtn.style.cursor = 'not-allowed';
            } else {
                submitBtn.disabled = false;
                submitBtn.style.opacity = '1';
                submitBtn.style.cursor = 'pointer';
            }
        }

        function renderImagePreviews() {
            const container = document.getElementById('task-images-preview');
            container.innerHTML = currentImages.map((img, index) => `
                <div style="position: relative; width: 120px; height: 120px; border: 2px solid var(--color-border); border-radius: 8px; overflow: hidden;">
                    <img src="${img}" style="width: 100%; height: 100%; object-fit: cover;">
                    <button type="button" onclick="removeImagePreview(${index})" 
                            style="position: absolute; top: 4px; right: 4px; background: rgba(239, 68, 68, 0.9); color: white; border: none; border-radius: 50%; width: 24px; height: 24px; cursor: pointer; font-size: 16px; line-height: 1; padding: 0;">×</button>
                </div>
            `).join('');
        }

        function removeImagePreview(index) {
            currentImages.splice(index, 1);
            renderImagePreviews();
            
            const statusElement = document.getElementById('image-upload-status');
            if (currentImages.length === 0) {
                statusElement.textContent = '';
            } else {
                statusElement.textContent = `現在${currentImages.length}枚の画像が選択されています`;
                statusElement.style.color = 'var(--color-primary)';
            }
        }

        function renderTasks(taskFilter = null) {
            const container = document.getElementById('task-list');
            const filterAssignee = document.getElementById('filter-assignee').value;
            const filterPriority = document.getElementById('filter-priority').value;
            const filterCategory = document.getElementById('filter-category').value;
            const filterStatus = document.getElementById('filter-status').value;
            const sortOrder = document.getElementById('sort-order').value;

            processRecurringTasks();

            const completedStatuses = ['完了', '依頼終了', 'リリース'];
            let filtered = tasks.filter(task => !completedStatuses.includes(task.status) && (
                (!filterAssignee || task.assignee === filterAssignee) &&
                (!filterPriority || task.priority === filterPriority) &&
                (!filterCategory || task.category === filterCategory) &&
                (!filterStatus || task.status === filterStatus)
            ));

            if (taskFilter === 'active') {
                filtered = filtered.filter(t => t.status !== '完了');
            } else if (taskFilter === 'priority') {
                const priority = window.currentPriorityFilter;
                filtered = filtered.filter(t => t.priority === priority);
            }

            const priorityOrder = priorities.reduce((acc, p, i) => ({ ...acc, [p.name]: i }), {});
            
            filtered.sort((a, b) => {
                if (sortOrder === 'priority') {
                    const priorityDiff = priorityOrder[a.priority] - priorityOrder[b.priority];
                    if (priorityDiff !== 0) return priorityDiff;
                    return new Date(a.endDate) - new Date(b.endDate);
                } else if (sortOrder === 'deadline') {
                    return new Date(a.endDate) - new Date(b.endDate);
                } else if (sortOrder === 'created') {
                    return new Date(b.createdAt) - new Date(a.createdAt);
                } else if (sortOrder === 'assignee') {
                    return a.assignee.localeCompare(b.assignee);
                }
                return 0;
            });

            const assignees = [...new Set(tasks.map(t => t.assignee))];
            document.getElementById('filter-assignee').innerHTML = '<option value="">すべて</option>' + 
                assignees.map(a => `<option value="${a}">${a}</option>`).join('');

            container.innerHTML = filtered.map(task => {
                const priorityColor = priorities.find(p => p.name === task.priority)?.color || '#21808D';
                const today = new Date();
                const endDate = new Date(task.endDate);
                const daysUntil = Math.ceil((endDate - today) / (1000 * 60 * 60 * 24));
                const isOverdue = task.status !== '完了' && endDate < today;
                
                let alertBadges = '';
                if (task.status !== '完了' && task.alerts) {
                    task.alerts.forEach(alert => {
                        const alertDate = new Date(endDate);
                        alertDate.setDate(alertDate.getDate() - alert.days);
                        if (today >= alertDate && today <= endDate) {
                            alertBadges += `<span class="badge alert-badge">締切${daysUntil}日前</span>`;
                        }
                    });
                }

                let countdownBadge = '';
                let countdownClass = '';
                if (task.status !== '完了') {
                    if (daysUntil < 0) {
                        countdownBadge = `<div style="background: rgba(239, 68, 68, 0.1); color: #dc2626; border: 1px solid rgba(239, 68, 68, 0.2); padding: 5px 10px; border-radius: 6px; font-weight: 500; font-size: 12px; display: inline-block;">⚠️ 締切超過: ${Math.abs(daysUntil)}日</div>`;
                    } else if (daysUntil === 0) {
                        countdownBadge = `<div style="background: rgba(249, 115, 22, 0.1); color: #ea580c; border: 1px solid rgba(249, 115, 22, 0.2); padding: 5px 10px; border-radius: 6px; font-weight: 500; font-size: 12px; display: inline-block;">⏰ 本日締切</div>`;
                    } else if (daysUntil <= 3) {
                        countdownBadge = `<div style="background: rgba(249, 115, 22, 0.1); color: #ea580c; border: 1px solid rgba(249, 115, 22, 0.2); padding: 5px 10px; border-radius: 6px; font-weight: 500; font-size: 12px; display: inline-block;">⏳ 残り${daysUntil}日</div>`;
                    } else {
                        countdownBadge = `<div style="background: rgba(71, 85, 105, 0.08); color: #475569; border: 1px solid rgba(71, 85, 105, 0.15); padding: 5px 10px; border-radius: 6px; font-weight: 500; font-size: 12px; display: inline-block;">📅 残り${daysUntil}日</div>`;
                    }
                }

                return `
                    <div class="task-item ${isOverdue ? 'overdue' : ''}" style="--task-priority-color: ${priorityColor}" onclick="viewTaskDetail(${task.id})">
                        <!-- ヘッダーエリア -->
                        <div style="background: linear-gradient(135deg, ${priorityColor}15, ${priorityColor}05); padding: 16px 20px; border-bottom: 1px solid var(--color-card-border);">
                            <div style="display: flex; justify-content: space-between; align-items: start; gap: 12px; flex-wrap: wrap;">
                                <div style="flex: 1; min-width: 0;">
                                    <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 8px; flex-wrap: wrap;">
                                        <div style="width: 6px; height: 24px; background: ${priorityColor}; border-radius: 3px;"></div>
                                        <h3 style="font-size: 17px; font-weight: 600; margin: 0; color: var(--color-text); line-height: 1.3;">${task.name}</h3>
                                        <div style="display: inline-flex; align-items: center; gap: 6px; padding: 4px 10px; background: ${priorityColor}; color: white; border-radius: 20px; font-size: 11px; font-weight: 600; letter-spacing: 0.3px;">
                                            ${task.priority}
                                        </div>
                                        ${task.repeat ? '<span style="background: var(--color-primary); color: white; padding: 4px 10px; border-radius: 20px; font-size: 11px; font-weight: 600;">🔄 定例</span>' : ''}
                                        ${task.images && task.images.length > 0 ? `
                                            <span style="display: inline-flex; align-items: center; gap: 4px; padding: 4px 10px; background: rgba(139, 92, 246, 0.15); color: var(--color-primary); border-radius: 20px; font-size: 11px; font-weight: 600;">
                                                📷 ${task.images.length}
                                            </span>
                                        ` : ''}
                                    </div>
                                    <div style="display: flex; align-items: center; gap: 16px; flex-wrap: wrap; font-size: 13px; color: var(--color-text-secondary);">
                                        <div style="display: flex; align-items: center; gap: 6px;">
                                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                                <circle cx="12" cy="7" r="4"></circle>
                                            </svg>
                                            <span style="font-weight: 500;">${task.assignee}</span>
                                        </div>
                                        <div style="display: flex; align-items: center; gap: 6px;">
                                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                                <line x1="3" y1="10" x2="21" y2="10"></line>
                                            </svg>
                                            <span>${formatDateTime(task.endDate)}</span>
                                        </div>
                                        <div style="display: inline-flex; align-items: center; gap: 6px; padding: 4px 12px; background: var(--color-surface); border: 1px solid var(--color-border); border-radius: 20px; font-weight: 500;">
                                            <div style="width: 6px; height: 6px; background: var(--color-primary); border-radius: 50%;"></div>
                                            ${task.status}
                                        </div>
                                        <div style="display: inline-flex; align-items: center; gap: 6px; padding: 4px 12px; background: var(--color-surface); border: 1px solid var(--color-border); border-radius: 20px; font-weight: 500;">
                                            📁 ${task.category}
                                        </div>
                                    </div>
                                </div>
                                <div style="display: flex; flex-direction: column; gap: 8px; align-items: flex-end;">
                                    ${countdownBadge}
                                    ${alertBadges}
                                    ${isOverdue ? '<span class="badge alert-badge" style="font-size: 11px; padding: 6px 12px; border-radius: 20px;">⚠️ 遅延中</span>' : ''}
                                </div>
                            </div>
                        </div>

                        <!-- コンテンツエリア -->
                        <div style="padding: 20px;">
                            ${task.description ? `
                                <div style="font-size: 14px; color: var(--color-text); margin-bottom: 16px; padding: 14px 16px; background: linear-gradient(135deg, rgba(139, 92, 246, 0.04), rgba(236, 72, 153, 0.04)); border-left: 3px solid ${priorityColor}; border-radius: 8px; line-height: 1.6;">
                                    ${task.description}
                                </div>
                            ` : ''}

                            <!-- アクションボタン -->
                            <div style="display: flex; gap: 8px; margin-top: 16px; padding-top: 16px; border-top: 1px solid var(--color-border);">
                                <button class="btn btn-secondary btn-small" onclick="event.stopPropagation(); editTask(${task.id})" style="font-size: 13px; padding: 8px 16px; display: flex; align-items: center; gap: 6px;">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                    </svg>
                                    編集
                                </button>
                                <button class="btn btn-secondary btn-small" onclick="event.stopPropagation(); deleteTask(${task.id})" style="font-size: 13px; padding: 8px 16px; display: flex; align-items: center; gap: 6px;">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="3 6 5 6 21 6"></polyline>
                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                    </svg>
                                    削除
                                </button>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function formatDateTime(dateStr) {
            const date = new Date(dateStr);
            const weekdays = ['日', '月', '火', '水', '木', '金', '土'];
            const month = date.getMonth() + 1;
            const day = date.getDate();
            const weekday = weekdays[date.getDay()];
            const hours = String(date.getHours()).padStart(2, '0');
            const minutes = String(date.getMinutes()).padStart(2, '0');
            return `${month}/${day}(${weekday}) ${hours}:${minutes}`;
        }

        function processRecurringTasks() {
            const now = new Date();
            const completedStatuses = ['完了', '依頼終了', 'リリース'];
            tasks.forEach(task => {
                if (task.repeat && completedStatuses.includes(task.status)) {
                    const endDate = new Date(task.endDate);
                    if (endDate < now) {
                        let nextDate = new Date(endDate);
                        if (task.repeat.type === 'weekly') {
                            nextDate.setDate(nextDate.getDate() + 7);
                        } else if (task.repeat.type === 'monthly') {
                            nextDate.setMonth(nextDate.getMonth() + 1);
                        }
                        
                        if (nextDate > now || (nextDate.toDateString() === now.toDateString())) {
                            const newTask = {
                                ...task,
                                id: Date.now() + Math.random(),
                                endDate: nextDate.toISOString().slice(0, 16),
                                status: statuses[0],
                                comments: [],
                                createdAt: new Date().toISOString()
                            };
                            tasks.push(newTask);
                        }
                    }
                }
            });
        }

        function showFilteredTasks(filterType) {
            if (filterType === 'all') {
                renderTasks();
            } else if (filterType === 'active') {
                renderTasks('active');
            } else if (filterType === 'completed') {
                renderCompletedTasks();
                switchTab('completed');
            }
        }

        function showPriorityTasks(priority) {
            window.currentPriorityFilter = priority;
            renderTasks('priority');
        }

        function renderCompletedTasks() {
            const container = document.getElementById('completed-task-list');
            const completedStatuses = ['完了', '依頼終了', 'リリース'];
            const completed = tasks.filter(t => completedStatuses.includes(t.status))
                .sort((a, b) => new Date(b.createdAt || b.endDate) - new Date(a.createdAt || a.endDate))
                .slice(0, 50);

            if (completed.length === 0) {
                container.innerHTML = '<p style="color: var(--color-text-secondary);">完了タスクがありません</p>';
                return;
            }

            container.innerHTML = completed.map(task => {
                const priorityColor = priorities.find(p => p.name === task.priority)?.color || '#21808D';
                return `
                    <div class="task-item" style="--task-priority-color: ${priorityColor}; opacity: 0.85;" onclick="viewTaskDetail(${task.id})">
                        <!-- ヘッダーエリア -->
                        <div style="background: linear-gradient(135deg, ${priorityColor}15, ${priorityColor}05); padding: 16px 20px; border-bottom: 1px solid var(--color-card-border);">
                            <div style="display: flex; justify-content: space-between; align-items: start; gap: 12px; flex-wrap: wrap;">
                                <div style="flex: 1; min-width: 0;">
                                    <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 8px; flex-wrap: wrap;">
                                        <div style="width: 6px; height: 24px; background: ${priorityColor}; border-radius: 3px;"></div>
                                        <h3 style="font-size: 17px; font-weight: 600; margin: 0; color: var(--color-text); line-height: 1.3;">${task.name}</h3>
                                        <div style="display: inline-flex; align-items: center; gap: 6px; padding: 4px 10px; background: ${priorityColor}; color: white; border-radius: 20px; font-size: 11px; font-weight: 600; letter-spacing: 0.3px;">
                                            ${task.priority}
                                        </div>
                                        ${task.repeat ? '<span style="background: var(--color-primary); color: white; padding: 4px 10px; border-radius: 20px; font-size: 11px; font-weight: 600;">🔄 定例</span>' : ''}
                                        ${task.images && task.images.length > 0 ? `
                                            <span style="display: inline-flex; align-items: center; gap: 4px; padding: 4px 10px; background: rgba(139, 92, 246, 0.15); color: var(--color-primary); border-radius: 20px; font-size: 11px; font-weight: 600;">
                                                📷 ${task.images.length}
                                            </span>
                                        ` : ''}
                                        <span style="display: inline-flex; align-items: center; gap: 4px; padding: 4px 10px; background: rgba(34, 197, 94, 0.15); color: #16a34a; border-radius: 20px; font-size: 11px; font-weight: 600;">
                                            ✓ 完了
                                        </span>
                                    </div>
                                    <div style="display: flex; align-items: center; gap: 16px; flex-wrap: wrap; font-size: 13px; color: var(--color-text-secondary);">
                                        <div style="display: flex; align-items: center; gap: 6px;">
                                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                                <circle cx="12" cy="7" r="4"></circle>
                                            </svg>
                                            <span style="font-weight: 500;">${task.assignee}</span>
                                        </div>
                                        <div style="display: flex; align-items: center; gap: 6px;">
                                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                                <line x1="3" y1="10" x2="21" y2="10"></line>
                                            </svg>
                                            <span>${formatDateTime(task.endDate)}</span>
                                        </div>
                                        <div style="display: inline-flex; align-items: center; gap: 6px; padding: 4px 12px; background: var(--color-surface); border: 1px solid var(--color-border); border-radius: 20px; font-weight: 500;">
                                            <div style="width: 6px; height: 6px; background: #16a34a; border-radius: 50%;"></div>
                                            ${task.status}
                                        </div>
                                        <div style="display: inline-flex; align-items: center; gap: 6px; padding: 4px 12px; background: var(--color-surface); border: 1px solid var(--color-border); border-radius: 20px; font-weight: 500;">
                                            📁 ${task.category}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- コンテンツエリア -->
                        <div style="padding: 20px;">
                            ${task.details ? `
                                <div style="font-size: 13px; color: var(--color-text-secondary); margin-top: 12px; padding: 12px 16px; background: var(--color-secondary); border-radius: 8px; line-height: 1.5;">
                                    <div style="font-weight: 600; color: var(--color-text); margin-bottom: 6px; font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px;">詳細</div>
                                    ${task.details}
                                </div>
                            ` : ''}

                            <!-- アクションボタン -->
                            <div style="display: flex; gap: 8px; margin-top: 16px; padding-top: 16px; border-top: 1px solid var(--color-border);">
                                <button class="btn btn-secondary btn-small" onclick="event.stopPropagation(); editTask(${task.id})" style="font-size: 13px; padding: 8px 16px; display: flex; align-items: center; gap: 6px;">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                    </svg>
                                    編集
                                </button>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function viewTaskDetailWithEdit(taskId) {
            const task = tasks.find(t => t.id === taskId);
            if (!task) return;

            const priorityColor = priorities.find(p => p.name === task.priority)?.color || '#21808D';
            const content = document.getElementById('task-detail-content');
            
            content.innerHTML = `
                <div style="margin-bottom: 16px;">
                    <h3 style="font-size: 18px; margin-bottom: 12px;">${task.name}</h3>
                    <button class="btn btn-primary" onclick="editTask(${taskId}); closeModal();" style="margin-bottom: 16px;">このタスクを編集</button>
                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 12px; margin-bottom: 12px;">
                        <div><strong>担当者:</strong> ${task.assignee}</div>
                        <div><strong>カテゴリー:</strong> ${task.category}</div>
                        <div><strong>開始日:</strong> ${formatDateTime(task.startDate)}</div>
                        <div><strong>締切:</strong> ${formatDateTime(task.endDate)}</div>
                        <div><strong>優先度:</strong> <span class="badge" style="background-color: ${priorityColor}; color: white;">${task.priority}</span></div>
                        <div><strong>進捗:</strong> ${task.status}</div>
                    </div>
                    ${task.repeat ? `<div style="margin-bottom: 12px;"><strong>🔄 定例設定:</strong> ${task.repeat.type === 'weekly' ? `毎週${['日', '月', '火', '水', '木', '金', '土'][task.repeat.weekday]}曜日 ${task.repeat.time}` : `毎月${task.repeat.day}日 ${task.repeat.time}`}</div>` : ''}
                    ${task.details ? `<div style="margin-bottom: 12px;"><strong>詳細:</strong><br>${task.details}</div>` : ''}
                    ${task.images && task.images.length > 0 ? `
                        <div style="margin-top: 12px;">
                            <strong>画像:</strong>
                            <div style="display: flex; flex-wrap: wrap; gap: 12px; margin-top: 8px;">
                                ${task.images.map((img, idx) => `
                                    <img src="${img}" onclick="openImageModal('${img}')" 
                                         style="width: 120px; height: 120px; object-fit: cover; border-radius: 8px; cursor: pointer; border: 2px solid var(--color-border);">
                                `).join('')}
                            </div>
                        </div>
                    ` : ''}
                    ${task.image ? `<img src="${task.image}" onclick="openImageModal('${task.image}')" style="max-width: 100%; height: auto; margin-top: 8px; border-radius: 8px; object-fit: contain; display: block; cursor: pointer;">` : ''}
                </div>
                <div class="comments-section">
                    <h4 style="font-size: 16px; margin-bottom: 12px;">コメント</h4>
                    <div id="comments-list-${taskId}">
                        ${task.comments && task.comments.length > 0 ? 
                            Object.entries(task.comments.reduce((acc, c) => {
                                const date = new Date(c.timestamp).toLocaleDateString('ja-JP');
                                if (!acc[date]) acc[date] = [];
                                acc[date].push(c);
                                return acc;
                            }, {})).sort((a, b) => new Date(b[0]) - new Date(a[0])).map(([date, comments]) => `
                                <div class="comment-date-group">
                                    <div class="comment-date-header">${date}</div>
                                    ${comments.map(c => `
                                        <div class="comment-item">
                                            <div style="font-weight: 500;">${c.status || task.status}</div>
                                            <div>${c.text}</div>
                                            ${c.image ? `<img src="${c.image}" style="object-fit: contain;">` : ''}
                                            <div style="font-size: 11px; color: var(--color-text-secondary); margin-top: 4px;">${new Date(c.timestamp).toLocaleTimeString('ja-JP', { hour: '2-digit', minute: '2-digit' })}</div>
                                        </div>
                                    `).join('')}
                                </div>
                            `).join('')
                        : '<p style="color: var(--color-text-secondary);">コメントはありません</p>'}
                    </div>
                    <textarea id="comment-text-${taskId}" placeholder="コメントを入力" style="margin-top: 12px; width: 100%;"></textarea>
                    <input type="file" id="comment-image-${taskId}" accept="image/*" style="margin-top: 8px;">
                    <button class="btn btn-primary" style="margin-top: 8px;" onclick="addComment(${taskId})">コメント追加</button>
                </div>
            `;

            document.getElementById('task-detail-modal').classList.add('active');
        }

        function viewTaskDetail(taskId) {
            const task = tasks.find(t => t.id === taskId);
            if (!task) return;

            const priorityColor = priorities.find(p => p.name === task.priority)?.color || '#21808D';
            const content = document.getElementById('task-detail-content');
            
            const endDate = new Date(task.endDate);
            const today = new Date();
            const daysRemaining = Math.ceil((endDate - today) / (1000 * 60 * 60 * 24));
            const hoursRemaining = Math.ceil((endDate - today) / (1000 * 60 * 60));
            
            let countdownClass = 'deadline-countdown safe';
            let countdownText = '';
            if (daysRemaining < 0) {
                countdownClass = 'deadline-countdown';
                countdownText = `締切超過: ${Math.abs(daysRemaining)}日経過`;
            } else if (daysRemaining === 0) {
                countdownClass = 'deadline-countdown';
                countdownText = `本日締切 (残り${hoursRemaining}時間)`;
            } else if (daysRemaining <= 3) {
                countdownClass = 'deadline-countdown warning';
                countdownText = `残り${daysRemaining}日`;
            } else {
                countdownText = `残り${daysRemaining}日`;
            }

            const commentsByDate = {};
            task.comments.forEach(c => {
                const date = new Date(c.timestamp).toLocaleDateString('ja-JP');
                if (!commentsByDate[date]) commentsByDate[date] = [];
                commentsByDate[date].push(c);
            });
            
            content.innerHTML = `
                <div style="margin-bottom: 16px;">
                    <h3 style="font-size: 18px; margin-bottom: 12px;">${task.name}</h3>
                    ${task.status !== '完了' ? `<div class="${countdownClass}">${countdownText}</div>` : ''}
                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 12px; margin-bottom: 12px;">
                        <div><strong>担当者:</strong> ${task.assignee}</div>
                        <div><strong>カテゴリー:</strong> ${task.category}</div>
                        <div><strong>開始日:</strong> ${formatDateTime(task.startDate)}</div>
                        <div><strong>締切:</strong> ${formatDateTime(task.endDate)}</div>
                        <div><strong>優先度:</strong> <span class="badge" style="background-color: ${priorityColor}; color: white;">${task.priority}</span></div>
                        <div><strong>進捗:</strong> ${task.status}</div>
                    </div>
                    ${task.repeat ? `<div style="margin-bottom: 12px;"><strong>🔄 定例設定:</strong> ${task.repeat.type === 'weekly' ? `毎週${['日', '月', '火', '水', '木', '金', '土'][task.repeat.weekday]}曜日 ${task.repeat.time}` : `毎月${task.repeat.day}日 ${task.repeat.time}`}</div>` : ''}
                    ${task.details ? `<div style="margin-bottom: 12px;"><strong>詳細:</strong><br>${task.details}</div>` : ''}
                    ${task.image ? `<img src="${task.image}" style="max-width: 100%; height: auto; margin-top: 8px; border-radius: 8px; object-fit: contain; display: block;">` : ''}
                </div>
                <div class="comments-section">
                    <h4 style="font-size: 16px; margin-bottom: 12px;">コメント</h4>
                    <div id="comments-list-${taskId}">
                        ${Object.entries(commentsByDate).sort((a, b) => new Date(b[0]) - new Date(a[0])).map(([date, comments]) => `
                            <div class="comment-date-group">
                                <div class="comment-date-header">${date}</div>
                                ${comments.map(c => `                                        <div class="comment-item">
                                            <div style="font-weight: 500;">${c.status || task.status}</div>
                                            <div>${c.text}</div>
                                            ${c.image ? `<img src="${c.image}" style="object-fit: contain;">` : ''}
                                            <div style="font-size: 11px; color: var(--color-text-secondary); margin-top: 4px;">${new Date(c.timestamp).toLocaleTimeString('ja-JP', { hour: '2-digit', minute: '2-digit' })}</div>
                                        </div>
                                `).join('')}
                            </div>
                        `).join('')}
                    </div>
                    <textarea id="comment-text-${taskId}" placeholder="コメントを入力" style="margin-top: 12px; width: 100%;"></textarea>
                    <input type="file" id="comment-image-${taskId}" accept="image/*" style="margin-top: 8px;">
                    <button class="btn btn-primary" style="margin-top: 8px;" onclick="addComment(${taskId})">コメント追加</button>
                </div>
            `;

            document.getElementById('task-detail-modal').classList.add('active');
        }

        function addComment(taskId) {
            const task = tasks.find(t => t.id === taskId);
            const commentText = document.getElementById(`comment-text-${taskId}`).value;
            const imageInput = document.getElementById(`comment-image-${taskId}`);

            if (!commentText.trim() && !imageInput.files[0]) {
                alert('コメントまたは画像を入力してください');
                return;
            }

            const addCommentToTask = (imageData) => {
                task.comments.push({
                    text: commentText,
                    image: imageData,
                    status: task.status,
                    timestamp: new Date().toISOString()
                });
                saveData();
                viewTaskDetail(taskId);
            };

            if (imageInput.files[0]) {
                const reader = new FileReader();
                reader.onload = (e) => addCommentToTask(e.target.result);
                reader.readAsDataURL(imageInput.files[0]);
            } else {
                addCommentToTask(null);
            }
        }

        function closeModal() {
            document.getElementById('task-detail-modal').classList.remove('active');
        }

        function deleteTask(taskId) {
            if (confirm('このタスクを削除しますか？')) {
                tasks = tasks.filter(t => t.id !== taskId);
                saveData();
                renderTasks();
                updateStats();
            }
        }

        function applyFilters() {
            renderTasks();
        }

        function updateStats() {
            const completedStatuses = ['完了', '依頼終了', 'リリース'];
            const activeTasks = tasks.filter(t => !completedStatuses.includes(t.status));
            const total = activeTasks.length;
            const completed = tasks.filter(t => completedStatuses.includes(t.status)).length;
            const rate = (total + completed) > 0 ? Math.round((completed / (total + completed)) * 100) : 0;

            document.getElementById('total-tasks').textContent = total;
            document.getElementById('active-tasks').textContent = total;

            const totalElement = document.getElementById('total-tasks');
            const activeElement = document.getElementById('active-tasks');
            if (totalElement) totalElement.textContent = total;
            if (activeElement) activeElement.textContent = total;

            const priorityStats = document.getElementById('priority-stats');
            priorityStats.innerHTML = priorities.map(p => {
                const count = activeTasks.filter(t => t.priority === p.name).length;
                return `
                    <div class="priority-stat-card" onclick="showPriorityTasks('${p.name}')" style="border-left: 4px solid ${p.color}">
                        <div class="priority-stat-value" style="color: ${p.color}">${count}</div>
                        <div class="priority-stat-label">${p.name}優先度</div>
                    </div>
                `;
            }).join('');
        }

        function renderGanttChart() {
            const container = document.getElementById('gantt-chart');
            const filterButtons = document.getElementById('category-filter-buttons');
            const completedStatuses = ['完了', '依頼終了', 'リリース'];
            const activeTasks = tasks.filter(t => !completedStatuses.includes(t.status));
            
            if (activeTasks.length === 0) {
                container.innerHTML = '<p style="color: var(--color-text-secondary);">進行中のタスクがありません</p>';
                return;
            }

            filterButtons.innerHTML = categoryOrder.map(cat => `
                <button class="category-filter-btn ${selectedCategories.includes(cat) ? 'active' : ''}" 
                        onclick="toggleCategoryFilter('${cat}')">
                    ${cat}
                </button>
            `).join('');

            const filteredTasks = activeTasks.filter(t => selectedCategories.includes(t.category));
            const minDate = new Date(Math.min(...filteredTasks.map(t => new Date(t.startDate))));
            const maxDate = new Date(Math.max(...filteredTasks.map(t => new Date(t.endDate))));
            const totalDays = Math.ceil((maxDate - minDate) / (1000 * 60 * 60 * 24)) + 1;

            const dateMarkers = [];
            for (let i = 0; i <= totalDays; i += Math.ceil(totalDays / 10)) {
                const markerDate = new Date(minDate);
                markerDate.setDate(markerDate.getDate() + i);
                dateMarkers.push(`${markerDate.getMonth() + 1}/${markerDate.getDate()}`);
            }

            const categoryGroups = {};
            categoryOrder.forEach(cat => {
                if (selectedCategories.includes(cat)) {
                    categoryGroups[cat] = filteredTasks.filter(t => t.category === cat)
                        .sort((a, b) => new Date(a.startDate) - new Date(b.startDate));
                }
            });

            container.innerHTML = `
                <div class="gantt-dates">
                    ${dateMarkers.map(d => `<div class="gantt-date-marker">${d}</div>`).join('')}
                </div>
                ${categoryOrder.filter(cat => selectedCategories.includes(cat) && categoryGroups[cat].length > 0).map((cat, catIndex) => `
                    <div class="gantt-category-section" draggable="true" data-category="${cat}" 
                         ondragstart="handleDragStart(event)" ondragover="handleDragOver(event)" 
                         ondrop="handleDrop(event)" ondragend="handleDragEnd(event)">
                        <div class="gantt-category-header">
                            <div style="display: flex; align-items: center; gap: 8px;">
                                <span class="drag-handle">☰</span>
                                <span>${cat}</span>
                            </div>
                            <span>${categoryGroups[cat].length}件</span>
                        </div>
                        <div class="gantt-header">
                            <div>タスク名</div>
                            <div>期間</div>
                        </div>
                        ${categoryGroups[cat].map(task => {
                            const startDate = new Date(task.startDate);
                            const endDate = new Date(task.endDate);
                            const startOffset = Math.max(0, Math.ceil((startDate - minDate) / (1000 * 60 * 60 * 24)));
                            const duration = Math.ceil((endDate - startDate) / (1000 * 60 * 60 * 24)) + 1;
                            const leftPercent = (startOffset / totalDays) * 100;
                            const widthPercent = (duration / totalDays) * 100;
                            const priorityColor = priorities.find(p => p.name === task.priority)?.color || '#8B5CF6';

                            return `
                                <div class="gantt-row">
                                    <div class="gantt-task-name" onclick="viewTaskDetailWithEdit(${task.id})" 
                                         style="cursor: pointer; text-decoration: underline;">${task.name}</div>
                                    <div class="gantt-timeline" onclick="viewTaskDetailWithEdit(${task.id})" style="cursor: pointer;">
                                        <div class="gantt-bar" style="left: ${leftPercent}%; width: ${widthPercent}%; 
                                             background: linear-gradient(135deg, ${priorityColor}, ${priorityColor}dd);">
                                            ${task.status}
                                        </div>
                                    </div>
                                </div>
                            `;
                        }).join('')}
                    </div>
                `).join('')}
            `;
        }

        let draggedCategory = null;

        function handleDragStart(e) {
            draggedCategory = e.target.getAttribute('data-category');
            e.target.classList.add('dragging');
            e.dataTransfer.effectAllowed = 'move';
        }

        function handleDragOver(e) {
            if (e.preventDefault) {
                e.preventDefault();
            }
            e.dataTransfer.dropEffect = 'move';
            return false;
        }

        function handleDrop(e) {
            if (e.stopPropagation) {
                e.stopPropagation();
            }
            
            const targetCategory = e.currentTarget.getAttribute('data-category');
            
            if (draggedCategory && targetCategory && draggedCategory !== targetCategory) {
                const draggedIndex = categoryOrder.indexOf(draggedCategory);
                const targetIndex = categoryOrder.indexOf(targetCategory);
                
                categoryOrder.splice(draggedIndex, 1);
                categoryOrder.splice(targetIndex, 0, draggedCategory);
                
                saveData();
                renderGanttChart();
            }
            
            return false;
        }

        function handleDragEnd(e) {
            e.target.classList.remove('dragging');
            draggedCategory = null;
        }

        function generateReports() {
            const now = new Date();
            const weekStart = new Date(now);
            weekStart.setDate(weekStart.getDate() - weekStart.getDay());
            const monthStart = new Date(now.getFullYear(), now.getMonth(), 1);

            const weekTasks = tasks.filter(t => {
                const created = new Date(t.createdAt);
                return created >= weekStart;
            });

            const monthTasks = tasks.filter(t => {
                const created = new Date(t.createdAt);
                return created >= monthStart;
            });

            const weekCompleted = weekTasks.filter(t => t.status === '完了').length;
            const monthCompleted = monthTasks.filter(t => t.status === '完了').length;

            document.getElementById('weekly-report').innerHTML = `
                <h4 style="font-size: 16px; margin-bottom: 12px;">今週の実績</h4>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 16px;">
                    <div>
                        <div class="stat-value">${weekTasks.length}</div>
                        <div class="stat-label">新規タスク</div>
                    </div>
                    <div>
                        <div class="stat-value">${weekCompleted}</div>
                        <div class="stat-label">完了タスク</div>
                    </div>
                    <div>
                        <div class="stat-value">${weekTasks.length > 0 ? Math.round((weekCompleted / weekTasks.length) * 100) : 0}%</div>
                        <div class="stat-label">完了率</div>
                    </div>
                </div>
            `;

            document.getElementById('monthly-report').innerHTML = `
                <h4 style="font-size: 16px; margin-bottom: 12px;">今月の実績</h4>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 16px;">
                    <div>
                        <div class="stat-value">${monthTasks.length}</div>
                        <div class="stat-label">新規タスク</div>
                    </div>
                    <div>
                        <div class="stat-value">${monthCompleted}</div>
                        <div class="stat-label">完了タスク</div>
                    </div>
                    <div>
                        <div class="stat-value">${monthTasks.length > 0 ? Math.round((monthCompleted / monthTasks.length) * 100) : 0}%</div>
                        <div class="stat-label">完了率</div>
                    </div>
                </div>
            `;
        }

        function exportData() {
            const dataStr = JSON.stringify({ tasks, priorities, statuses, categories }, null, 2);
            const blob = new Blob([dataStr], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `task-manager-backup-${new Date().toISOString().slice(0, 10)}.json`;
            a.click();
        }

        function exportCSV() {
            const headers = ['タスク名', '担当者', '開始日', '締切', '優先度', '進捗', 'カテゴリー', '詳細'];
            const rows = tasks.map(t => [
                t.name,
                t.assignee,
                t.startDate,
                t.endDate,
                t.priority,
                t.status,
                t.category,
                t.details || ''
            ]);

            const csvContent = [headers, ...rows].map(row => 
                row.map(cell => `"${String(cell).replace(/"/g, '""')}"`).join(',')
            ).join('\n');

            const blob = new Blob(['\ufeff' + csvContent], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `tasks-${new Date().toISOString().slice(0, 10)}.csv`;
            a.click();
        }

        function importData(event) {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = (e) => {
                try {
                    const data = JSON.parse(e.target.result);
                    if (data.tasks) tasks = data.tasks;
                    if (data.priorities) priorities = data.priorities;
                    if (data.statuses) statuses = data.statuses;
                    if (data.categories) categories = data.categories;
                    saveData();
                    init();
                    alert('データをインポートしました');
                } catch (error) {
                    alert('データの読み込みに失敗しました');
                }
            };
            reader.readAsText(file);
        }

        function renderPrioritySettings() {
            const container = document.getElementById('priority-settings');
            container.innerHTML = priorities.map((p, i) => `
                <div class="color-picker-group">
                    <input type="color" value="${p.color}" onchange="updatePriorityColor(${i}, this.value)">
                    <input type="text" value="${p.name}" onchange="updatePriorityName(${i}, this.value)" style="flex: 1;">
                    ${priorities.length > 1 ? `<button class="btn btn-secondary btn-small" onclick="removePriority(${i})">削除</button>` : ''}
                </div>
            `).join('');
        }

        function updatePriorityColor(index, color) {
            priorities[index].color = color;
            saveData();
            renderTasks();
            updateStats();
        }

        function updatePriorityName(index, name) {
            const oldName = priorities[index].name;
            priorities[index].name = name;
            tasks.forEach(t => {
                if (t.priority === oldName) t.priority = name;
            });
            saveData();
            updateSelects();
            renderTasks();
        }

        function addPriority() {
            const name = document.getElementById('new-priority').value.trim();
            if (!name) return;
            priorities.push({ name, color: '#21808D' });
            saveData();
            renderPrioritySettings();
            updateSelects();
            document.getElementById('new-priority').value = '';
        }

        function removePriority(index) {
            if (priorities.length <= 1) {
                alert('優先度は最低1つ必要です');
                return;
            }
            const removed = priorities.splice(index, 1)[0];
            tasks.forEach(t => {
                if (t.priority === removed.name) t.priority = priorities[0].name;
            });
            saveData();
            renderPrioritySettings();
            updateSelects();
            renderTasks();
        }

        function renderStatusSettings() {
            const container = document.getElementById('status-settings');
            container.innerHTML = statuses.map((s, i) => `
                <div class="list-item">
                    <span>${s}</span>
                    ${statuses.length > 1 ? `<button class="btn btn-secondary btn-small" onclick="removeStatus(${i})">削除</button>` : ''}
                </div>
            `).join('');
        }

        function addStatus() {
            const name = document.getElementById('new-status').value.trim();
            if (!name) return;
            statuses.push(name);
            saveData();
            renderStatusSettings();
            updateSelects();
            document.getElementById('new-status').value = '';
        }

        function removeStatus(index) {
            if (statuses.length <= 1) {
                alert('進捗状況は最低1つ必要です');
                return;
            }
            const removed = statuses.splice(index, 1)[0];
            tasks.forEach(t => {
                if (t.status === removed) t.status = statuses[0];
            });
            saveData();
            renderStatusSettings();
            updateSelects();
            renderTasks();
        }

        function renderCategorySettings() {
            const container = document.getElementById('category-settings');
            container.innerHTML = categories.map((c, i) => `
                <div class="list-item">
                    <span>${c}</span>
                    ${categories.length > 1 ? `<button class="btn btn-secondary btn-small" onclick="removeCategory(${i})">削除</button>` : ''}
                </div>
            `).join('');
        }

        function addCategory() {
            const name = document.getElementById('new-category').value.trim();
            if (!name) return;
            categories.push(name);
            categoryOrder.push(name);
            selectedCategories.push(name);
            saveData();
            renderCategorySettings();
            updateSelects();
            document.getElementById('new-category').value = '';
        }

        let editingTaskId = null;

        function editTask(taskId) {
            const task = tasks.find(t => t.id === taskId);
            if (!task) return;

            editingTaskId = taskId;

            document.getElementById('task-name').value = task.name;
            document.getElementById('task-description').value = task.description || '';
            document.getElementById('task-assignee').value = task.assignee;
            document.getElementById('task-start').value = task.startDate;
            document.getElementById('task-end').value = task.endDate;
            document.getElementById('task-priority').value = task.priority;
            document.getElementById('task-status').value = task.status;
            document.getElementById('task-category').value = task.category;
            document.getElementById('task-details').value = task.details || '';
            
            currentAlerts = task.alerts || [];
            renderAlertList();

            currentImages = task.images ? [...task.images] : (task.image ? [task.image] : []);
            renderImagePreviews();

            if (task.repeat) {
                document.getElementById('repeat-type').value = task.repeat.type;
                toggleRepeatOptions();
                if (task.repeat.type === 'weekly') {
                    document.getElementById('repeat-weekday').value = task.repeat.weekday;
                    document.getElementById('repeat-weekly-time').value = task.repeat.time;
                } else if (task.repeat.type === 'monthly') {
                    document.getElementById('repeat-day').value = task.repeat.day;
                    document.getElementById('repeat-monthly-time').value = task.repeat.time;
                }
            }
            
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            document.querySelectorAll('.tab')[1].classList.add('active');
            document.getElementById('add-tab').classList.add('active');

            const submitBtn = document.querySelector('#task-form button[type="submit"]');
            submitBtn.textContent = 'タスクを更新';

            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function toggleCategoryFilter(category) {
            const index = selectedCategories.indexOf(category);
            if (index > -1) {
                selectedCategories.splice(index, 1);
            } else {
                selectedCategories.push(category);
            }
            renderGanttChart();
        }

        function removeCategory(index) {
            if (categories.length <= 1) {
                alert('カテゴリーは最低1つ必要です');
                return;
            }
            const removed = categories.splice(index, 1)[0];
            tasks.forEach(t => {
                if (t.category === removed) t.category = categories[0];
            });
            saveData();
            renderCategorySettings();
            updateSelects();
            renderTasks();
        }

        function checkDeadlineAlerts() {
            const now = new Date();
            tasks.forEach(task => {
                if (task.status === '完了' || !task.alerts) return;

                task.alerts.forEach(alert => {
                    const endDate = new Date(task.endDate);
                    const alertDateTime = new Date(endDate);
                    alertDateTime.setDate(alertDateTime.getDate() - alert.days);
                    
                    if (alert.time) {
                        const [hours, minutes] = alert.time.split(':');
                        alertDateTime.setHours(parseInt(hours), parseInt(minutes), 0, 0);
                    }

                    const timeDiff = alertDateTime - now;
                    const hoursDiff = timeDiff / (1000 * 60 * 60);

                    if (hoursDiff > 0 && hoursDiff <= 0.017) {
                        showNotification(
                            `締切アラート: ${task.name}`,
                            `${alert.days}日前の通知です。締切: ${formatDateTime(task.endDate)}`,
                            'warning'
                        );
                    }
                });
            });
        }

        function showNotification(title, message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `notification-badge ${type}`;
            notification.innerHTML = `
                <div style="font-weight: 600; margin-bottom: 4px;">${title}</div>
                <div style="font-size: 13px;">${message}</div>
            `;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.remove();
            }, 5000);
        }

        setInterval(checkDeadlineAlerts, 60000);

        init();
        checkDeadlineAlerts();
    </script>
</body>
</html>

